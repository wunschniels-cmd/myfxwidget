  <script>
    function refreshImage() {
      const rand = Math.floor(Math.random() * 99999999);
      document.getElementById("fximg").src =
        "https://widget.myfxbook.com/widget/widget.png?accountOid=11805451&type=3" + rand;
    }
    refreshImage();
    setInterval(refreshImage, 60000);
  </script>

